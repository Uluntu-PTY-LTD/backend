<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Pool Fund</h1>
    <div class="col-6 offset-3">
        <form action="/poolfunds" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" type="text" id="name" name="pool_fund[name]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="paymentInterval">Payment Interval:</label>
                <select name="pool_fund[paymentInterval]" id="paymentInterval">
                    <% paymentIntervals.forEach(interval => { %>
                        <option value="<%= interval %>"><%= interval.charAt(0).toUpperCase() + interval.slice(1) %></option>
                    <% }) %>
                </select>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="wallet_address">Wallet Address</label>
                <input class="form-control" type="text" id="wallet_address" name="pool_fund[wallet_address]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Pool Fund</button>
            </div>
        </form>
        <a href="/poolfunds">All Pool Funds</a>
    </div>
</div>